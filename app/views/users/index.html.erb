<div class="container"> 

  <div class="row">  

    <div class="col-md-3">
    	
    <h2>User info</h2>
     <table class="table table-striped">
	    <%= image_tag @user.get_profile_image(100,100) %>
	     <tr>
    　   <th>name<%= @user.name %></th>
    　 </tr>
    　 <tr>
        <th>introduction<%= @user.introduction %></th>
       </tr>
     </table>
 
     <%= link_to "user_edit", edit_user_path(@user.id) %>

    <h2>New book</h2>
     <% if @book.errors.any? %>
     <%= @book.errors.count %>errors occurred
      <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
      </ul>
    <% end %>

    <%= form_with model:@book do |f| %>
    <h4>title</h4>
     <%=f.text_field:title %>
    <h4>body</h4>
     <%=f.text_area:body %>

    <br><%=f.submit 'Create Book'%>

    <% end %>
  </div>


<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table table-striped">
 <thead>
	 	<tr>
		<th>image</th>
		<th>name</th>
		<th></th>
	 	<th></th>
		 </tr>
	</thead>
	  
	<tbody>
    <% @users.each do |user| %>
		<tr>
			<td><%= image_tag user.get_profile_image(100,100) %></td>
			<td><%=user.name %></td>
			<td><%= link_to "show", user_path(user.id) %></td>
		</tr>
		<% end %>
		</tr>
	</tbody>
</table>
</div>



