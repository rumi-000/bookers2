
<div class="container"> 

  <div class="row">  

    <div class="col-md-3">
    	
    <h2>User info</h2>
     <table class="table table-striped">
	    <%= image_tag @user.get_profile_image(100,100) %>
	     <tr>
    　   <th>name<%= @user.name %></th>
    　 </tr>
    　 <tr>
        <th>introduction<%= @user.introduction %></th>
       </tr>
     </table>

     <%= link_to edit_user_path(@user.id) do %>
       <i class="fas fa-user-cog"></i>
     <% end %>
  
    <h2>New book</h2>
     <% if @book.errors.any? %>
     <%= @book.errors.count %>errors occurred
      <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
      </ul>
    <% end %>

    <%= form_with model:@book do |f| %>
    <h4>title</h4>
     <%=f.text_field:title %>
    <h4>body</h4>
     <%=f.text_area:body %>

    <br><%=f.submit 'Create Book'%>

    <% end %>
  </div>

  <div class="col-md-8 offset-md-1">
  <h2>books</h2>
  <table class="table table-striped">
   <thead>
	 	<tr>
	 	 <th></th>
			 <th>title</th>
			 <th>Opinion</th>
		 </tr>
	  </thead>
	  <tbody>
	  <tr>
	    <% @books.each do |book| %>
			<tr><td><%= link_to (image_tag @user.get_profile_image(100,100)) ,user_path(book.user) %></td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td></tr>
			<% end %>
		</tr>
	</tbody>
	</table>
 </div>
 
  </div>
 </div>


<%#= link_to "user_edit", edit_user_path(@user.id) %>