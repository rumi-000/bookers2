<h1>ユーザー情報</h1>
<div>
	<%= image_tag @user.get_profile_image(100,100) %>
　<h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
</div>

<div>
<%#= link_to "user_edit", edit_user_path(current_user.id) %>
<%= link_to "user_edit", edit_user_path(@user.id) %>
</div>

<h1>本の投稿画面</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@book do |f| %>
<h4>title</h4>
<%=f.text_field:title %>
<h4>body</h4>
<%=f.text_area:body %>

<br><%=f.submit 'Create Book'%>

<% end %>

<h2>books</h2>
<div>
<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= image_tag @user.get_profile_image(100,100) %></td>
			<td><%= @user.name %></td>
			<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>

		</tr>
		<% end %>
		</tr>
	</tbody>
</table>
</div>
