<h1>ユーザー情報</h1>
<div>
	<%= image_tag current_user.get_profile_image(100,100) %>
　<h3><%= current_user.name %></h3>
  <h3><%= current_user.introduction %></h3>
</div>

<div>
<%= link_to "user_edit", edit_user_path(current_user.id) %>
</div>


<h1>本の投稿画面</h1>
<% if Book.new.errors.any? %>
  <%= Book.new.errors.count %>errors occurred
  <ul>
    <% Book.new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:Book.new do |f| %>
<h4>title</h4>
<%=f.text_field:title %>
<h4>body</h4>
<%=f.text_area:body %>

<br><%=f.submit 'Create Book'%>

<% end %>
