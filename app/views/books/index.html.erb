
<div class="container">

  <div class="row">

    <div class="col-md-3">

   <h2>User info</h2>
   <table class="table table-striped">
	<%= image_tag current_user.get_profile_image(100,100) %>
　<tr>
　 <th><%= current_user.introduction %></th>
　</tr>
　<tr>
　 <th><%= current_user.name %></th>
  </tr>
</table>


     <%= link_to edit_user_path(current_user.id) do %>
       <i class="fas fa-user-cog"></i>
     <% end %>


  <h2>New book</h2>
     <% if @book.errors.any? %>
     <%= @book.errors.count %>errors occurred
      <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
      </ul>
    <% end %>

    <%= form_with model:@book do |f| %>
    <h4>title</h4>
     <%=f.text_field:title %>
    <h4>body</h4>
     <%=f.text_area:body %>

    <br><%=f.submit 'Create Book'%>

    <% end %>
 </div>


 <div class="col-md-8 offset-md-1">
 <h2>books</h2>
  <table class="table table-hover">
 <thead>
	 	<tr>
	 	 <th></th>
			 <th>Title</th>
			 <th>Opinion</th>
		 </tr>
	  </thead>
	<tbody>
		<tr>
		<% @books.each do |book| %>
		<tr><td><%= link_to (image_tag book.user.get_profile_image(100,100)),user_path(book.user) %></td>
		<td><%= link_to book.title, book_path(book.id) %></td>
		<td><%= book.body %></td></tr>
	  <% end %>
		</tr>
	</tbody>
</table>
</div>

  </div>
 </div>




