<h1>ユーザー情報</h1>
<div>
	<%= image_tag @user.get_profile_image(100,100) %>
　<h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
</div>

<div>
<%= link_to "user_edit", edit_user_path(current_user.id) %>
</div>


<h1>本の投稿画面</h1>
<% if @Book.errors.any? %>
  <%= @Book.errors.count %>errors occurred
  <ul>
    <% @Book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@book do |f| %>
<h4>title</h4>
<%=f.text_field:title %>
<h4>body</h4>
<%=f.text_area:body %>

<br><%=f.submit 'Create Book'%>

<% end %>


<div>
<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= link_to @Book.title, book_path %></td>
			<td><%= @Book.body %></td>
			
			 <% if @user== current_user %>
       <td><%= link_to "edit", edit_book_path(@Book.id) %></td>
       <% end %>
			 <% if @user== current_user %>
       <td><%= link_to "Destroy", book_path(@Book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
       <% end %>
			<td><%= link_to image_tag(@user.get_profile_image(100,100)), user_path(current_user) %></td>
			<td><%= link_to @user.name, user_path(current_user) %></td>
		</tr>
		</tr>
	</tbody>
</table>
</div>


